{
    // npm run dev をVSCodeのデバッガで動かすためのランチャです
    // https://zenn.dev/tazzae999jp/articles/1f792582b144af
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Next.js + JSON Server",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "cwd": "${workspaceFolder}/backend",
            "env": {
                "NODE_ENV": "development"
            },
        }
    ]
}